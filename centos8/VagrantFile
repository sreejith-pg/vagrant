# -*- mode: ruby -*-
# vi:set ft=ruby sw=2 ts=2 sts=2:

# Define the number of master and worker nodes
# If this number is changed, remember to update setup-hosts.sh script with the new hosts IP details in /etc/hosts of each VM.
NUM_NODE = 1
IP_NW = "192.168.56."
NODE_IP_START = 30
Vagrant.configure("2") do |config|
	config.vm.box = "generic/centos8"
	config.vm.box_check_update = false
	(1..NUM_NODE).each do |i|
		config.vm.define "cent8srv#{i}" do |node|
		node.vm.provider "virtualbox" do |vb|
			vb.name = "cent8srv#{i}"
			vb.memory = 1024
			vb.cpus = 1
		end
		node.vm.hostname = "cent8srv#{i}"
		node.vm.network :private_network, ip: IP_NW + "#{NODE_IP_START + i}"
		node.vm.network "forwarded_port", guest: 22, host: "#{2730 + i}"
		config.vm.provision "file", source: "./hosts", destination: "/tmp/hosts"
		config.vm.provision "shell", inline: "mv /tmp/hosts /etc/hosts" 
		node.vm.provision "setup-hosts", :type => "shell", :path => "setup-hosts.sh" do |s|
			s.args = ["eth1"]
		end
		end
	end
end
